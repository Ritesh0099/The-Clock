<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permission for exact alarms -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ritesh"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ritesh"
        android:supportsRtl="true"
        android:theme="@style/Theme.Clock"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Alarm Ring Screen -->
        <activity android:name=".AlarmRingActivity" android:exported="false" />

        <!-- World Clock Screen -->
        <activity android:name=".WorldClockActivity" android:exported="false" />

        <!-- Stopwatch Screen -->
        <activity android:name=".StopwatchActivity" android:exported="false" />

        <!-- Timer Screen -->
        <activity android:name=".TimerActivity" android:exported="false" />

        <!-- Alarm Receiver -->
        <receiver android:name=".AlarmReceiver" android:exported="false" />

    </application>

</manifest>
