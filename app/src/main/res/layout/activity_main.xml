<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="20dp"
    tools:context=".MainActivity">

    <!-- Top Title -->
    <TextView
        android:id="@+id/alarmTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:elevation="3dp"
        android:shadowColor="#33000000"
        android:shadowDx="0"
        android:shadowDy="3"
        android:shadowRadius="4"
        android:layout_marginTop="36dp"
        android:layout_centerHorizontal="true"/>

    <!-- Clock Image -->
    <ImageView
        android:id="@+id/clockImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/sleeplogo"
        android:layout_below="@id/alarmTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:contentDescription="Alarm Clock"/>

    <!-- RecyclerView (wrap in a CardView look for modern feel) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clockImage"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/alarmRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/card_bg_dark"
            android:elevation="2dp"
            android:visibility="gone"
            android:clipToPadding="false"/>

        <!-- No Alarms Text -->
        <TextView
            android:id="@+id/noAlarmsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No alarms"
            android:textColor="#BBBBBB"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"/>
    </LinearLayout>

    <!-- Floating Add Button (polished FAB) -->
    <ImageButton
        android:id="@+id/fab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="92dp"
        android:contentDescription="Add Alarm"
        android:src="@drawable/plusss"
        android:background="@drawable/fab_bg_amber"
        android:scaleType="centerInside"
        android:elevation="8dp"
        android:padding="10dp"/>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_nav_rounded"
        android:orientation="horizontal"
        android:gravity="center"
        android:elevation="8dp">

        <!-- Alarm Tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnAlarm"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="Alarm"
                android:src="@drawable/alarm"
                android:scaleType="centerInside"
                android:tint="#FFBB33"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alarm"
                android:textColor="#FFBB33"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <!-- World Clock Tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnWorldClock"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="World Clock"
                android:src="@drawable/worldclock"
                android:scaleType="centerInside"
                android:tint="#9E9E9E"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="World Clock"
                android:textColor="#BBBBBB"
                android:textSize="13sp"
                android:fontFamily="sans-serif"/>
        </LinearLayout>

        <!-- Stopwatch Tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnStopwatch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="Stopwatch"
                android:src="@drawable/stopwatch"
                android:scaleType="centerInside"
                android:tint="#BBBBBB"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stopwatch"
                android:textColor="#BBBBBB"
                android:textSize="13sp"
                android:fontFamily="sans-serif"/>
        </LinearLayout>

        <!-- Timer Tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnTimer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="Timer"
                android:src="@drawable/timer"
                android:scaleType="centerInside"
                android:tint="#BBBBBB"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timer"
                android:textColor="#BBBBBB"
                android:textSize="13sp"
                android:fontFamily="sans-serif"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
